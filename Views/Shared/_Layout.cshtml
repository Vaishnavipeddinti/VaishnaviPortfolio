@{
    ViewData["Title"] = "Vaishnavi Reddy";
}

@{
    var isHomePage = ViewContext.RouteData.Values["action"].ToString() == "Index";
    var isAwardsPage = ViewContext.RouteData.Values["action"].ToString() == "Awards";
    var isCourseworkPage = ViewContext.RouteData.Values["action"].ToString() == "CourseWork";
}

<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-QsHKjEPBoBo  
 atBDz9bsA7S/qywINKmMfuB5vmwNaqYfw+3djt4vMFzwY1MOaXl3PbqVwQy McDanielzNqMx8scy/MY5s" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-dark text-light d-flex flex-column h-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Action("ProfilePhoto", "Home")" alt="Vaishnavi Reddy" />
                </a>
                @if (isAwardsPage)
                {
                    <a href="@Url.Action("Index", "Home")" class="btn btn-link text-light">
                        <i class="fas fa-home award-header"></i>
                    </a>
                    <span class="navbar-brand mx-auto award-header">Recognitions and Achievements</span>
                }
                else if (isCourseworkPage)
                {
                    <a href="@Url.Action("Index", "Home")" class="btn btn-link text-light">
                        <i class="fas fa-home award-header"></i>
                    </a>
                    <span class="navbar-brand mx-auto award-header">COURSEWORK</span>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">My Portfolio</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-light hover-effect" href="#home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light hover-effect" href="#about">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light hover-effect" href="#experience">Experience</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light hover-effect" href="#project">Projects</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light hover-effect" href="#certifications">Certifications</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light hover-effect" href="#education">Education</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light hover-effect" href="#contact">Contact</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="navbar-toggler-icon"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item mb-2" href="@Url.Action("ViewCV", "Home")" target="_blank">VIEW CV</a></li>
                                    <li><a class="dropdown-item mb-2" asp-controller="Home" asp-action="Awards">AWARDS</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="CourseWork">COURSEWORK</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>

    <main class="flex-shrink-0">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    @if (isHomePage)
    {
        <nav id="sidebar">
            <ul>
                <li><a href="#home" class="active" title="Home"><i class="fas fa-home"></i></a></li>
                <li><a href="#about" title="About"><i class="fas fa-user"></i></a></li>
                <li><a href="#experience" title="Experience"><i class="fas fa-briefcase"></i></a></li>
                <li><a href="#project" title="Projects"><i class="fas fa-project-diagram"></i></a></li>
                <li><a href="#certifications" title="Certifications"><i class="fas fa-certificate"></i></a></li>
                <li><a href="#education" title="Education"><i class="fas fa-graduation-cap"></i></a></li>
                <li><a href="#contact" title="Contact"><i class="fas fa-envelope"></i></a></li>
            </ul>
        </nav>
    }

    <footer class="border-top footer text-muted bg-dark">
        <div class="container text-center py-3">
            &copy; 2024 - @Model.About.Name - Portfolio
            @*  <span class="text-muted">&copy; @DateTime.Now.Year - @(ViewBag.OwnerName ?? "Portfolio")</span> *@
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>